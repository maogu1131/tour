<div>
    <ul class="breadcrumb">
        <li>
            <a href="${ac.contextPath}/manage/publicPlace/query">公共场所管理</a>
        </li>
        <li>
            <a href="${ac.contextPath}/manage/publicPlace/init">新建公共场所</a>
        </li>
    </ul>
</div>

<div class="row">
   <div class="box col-md-12">
       <div class="box-inner">
           <div class="box-header well" data-original-title="">
               <h2><i class="glyphicon glyphicon-edit"></i>公共场所查询</h2>
               <div class="box-icon">                  
                   <a href="#" class="btn btn-minimize btn-round btn-default"><i
                           class="glyphicon glyphicon-chevron-up"></i></a>
               </div>
           </div>
           
           <div class="box-content">
               <form class="form-inline" id="searchForm" action="${ac.contextPath}/manage/publicPlace/query" method="post" data-toggle="validator">
                   <table class="table">
                       <tbody>
                           <tr>
                               <td>
                                   <div class="form-group has-success">
                                       <label class="control-label fix_width">公共场所ID</label>
                                       <div class="form-left-15" >
                                           <input type="text" class="form-control" id="id" name="id" value="$!syPublicPlace.id" />
                                       </div>
                                   </div>
                               </td>
                               <td>
                                   <div class="form-group has-success">
                                       <label class="control-label fix_width">公共场所名称</label>
                                       <div class="form-left-15" >
                                           <input type="text" class="form-control" id="name" name="name" value="$!syPublicPlace.name" />
                                       </div>
                                   </div>
                               </td>
                           </tr>
                           <tr>
                               <td>
                                   <div class="form-group has-success">
                                       <label class="control-label fix_width">状态</label>
                                       <div class="form-left-15" >
                                           <select class="form-control" id="status" name="status" >
                                               <option value="">全部</option>
                                                   <option value=1 #if($!syPublicPlace.status == 1) selected #end>有效</option>
                                                   <option value=-1 #if($!syPublicPlace.status == -1) selected #end>删除</option>
                                           </select>
                                       </div>
                                   </div>
                               </td>
                               <td>
                                   <div class="form-group has-success">
                                       <label class="control-label fix_width">地址</label>
                                       <div class="form-left-15" >
                                           <input type="text" class="form-control" id="address" name="address" value="$!syPublicPlace.address" />
                                       </div>
                                   </div>

                                   <div class="form-group" style="float:right">
                                       <button type="submit" class="btn btn-primary"> 查 询 </button>
                                   </div>
                               </td>
                           </tr>
                       </tbody>
                   </table>
                   
                   <input type="hidden" id="pageNo" name="pageNo" value="$!{query.pageNo}"/>
				   <input type="hidden" id="pageCount" name="pageCount" value="$!{query.pageCount}"/>
               </form>
           </div>
       </div>
   </div>
   <!--/span-->
</div><!--/row-->

<div class="row">
   <div class="box col-md-12">
       <div class="box-inner">
           <div class="box-header well" data-original-title="">
               <h2><i class="glyphicon glyphicon-edit"></i> 公共场所列表</h2>
               <div class="box-icon">
                 <a href="#" class="btn btn-minimize btn-round btn-default"><i
                           class="glyphicon glyphicon-chevron-up"></i></a>
               </div>
           </div>
           <div class="box-content">
               <!--  datatable -->
            <table class="table table-striped table-bordered bootstrap-datatable responsive">
                <thead>
                <tr>
                    <th>公共场所id</th>
                    <th>公共场所名称</th>
                    <th>状态</th>
                    <th>经度</th>
                    <th>纬度</th>
                    <th>地址</th>
                    <th>创建时间</th>
                    <th>修改时间</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody>
                #foreach($v in $list)
                <tr>
                    <td>$!{v.id}</td>
                    <td>$!{v.name}</td>
                    <td> #if($!{v.status} == 1) 有效 #else 删除 #end </td>
					<td>$!{v.longitude}</td>
					<td>$!{v.latitude}</td>
					<td>$!{v.address}</td>
                    <td>$!date.format('yyyy-MM-dd HH:mm:ss ',$!{v.createTime})</td>
                    <td>$!date.format('yyyy-MM-dd HH:mm:ss ',$!{v.modifyTime})</td>
                    <td class="center">
                        <a class="btn btn-success" href="#" onclick="javascript:window.open('${ac.contextPath}/manage/publicPlace/detail?id=${v.id}');">
                            <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                            查看
                        </a>
                        <a class="btn btn-primary" href="#"
								onclick="javascript:window.open('${ac.contextPath}/manage/publicPlace/edit?id=${v.id}');"
                            <i class="glyphicon glyphicon-edit icon-white"></i>
                            编辑
                        </a>
                        #if($!{v.status} == 1)
                        <a class="btn btn-danger" href="#" onclick="update(${v.id},-1);">
                            <i class="glyphicon glyphicon-trash icon-white"></i>
                            删除
                        </a>
                        #else
                        <a class="btn btn-info" href="#" onclick="update(${v.id},1);">
                            <i class="glyphicon glyphicon-trash icon-white"></i>
                            恢复
                        </a>
                        #end
                    </td>
                </tr>
                #end
                </tbody>
            </table>
			<!-- 引用common下面的分页 -->
			#parse("/common/page.vm")

        </div>
    </div>
</div>
<!--/span-->
</div><!--/row-->

<script>

// 删除景区
function update(id,status){
	var p = {
		id : id,
        status:status
	};

    $.ajax({
		type: "POST",
		url: "${ac.contextPath}/manage/publicPlace/update",
		data: p,
		dataType: "JSON",
        success: function(res){
            if(res.code == 1){
                layer.msg(res.msg, {icon:6},function () {
                    $("#searchForm").submit();
                });
            }else{
                layer.msg(res.msg, {icon: 10});
            }
        },
        error:function(){
            layer.msg("提交失败,请重试", {icon: 5});
            //setTimeout("window.location.reload()", 2000);//2秒后刷新
        }
	});
}

// 页面初始化函数
$(function(){
});
</script>

