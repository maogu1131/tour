<div>
    <ul class="breadcrumb">
        <li>
            <a href="${ac.contextPath}/manage/admin/superAdminPassInit">编辑超级管理员</a>
        </li>
        <li>
            <a href="${ac.contextPath}/manage/admin/addAdminInit">添加普通管理员</a>
        </li>
        <li>
            <a href="${ac.contextPath}/manage/admin/query">普通管理员列表</a>
        </li>
    </ul>
</div>

<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2><i class="glyphicon glyphicon-edit"></i>管理员列表查询</h2>
                <div class="box-icon">
                    <a href="#" class="btn btn-minimize btn-round btn-default"><i
                            class="glyphicon glyphicon-chevron-up"></i></a>
                </div>
            </div>

            <div class="box-content">
                <form class="form-inline" id="searchForm" action="${ac.contextPath}/manage/admin/query" method="post"
                      data-toggle="validator">
                    <table class="table">
                        <tbody>
                        <tr>
                            <td>
                                <div class="form-group has-success">
                                    <label class="control-label fix_width">adminId</label>
                                    <div class="form-left-15">
                                        <input type="text" class="form-control" id="id" name="id"
                                               value="$!syAdminUser.id"/>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group has-success">
                                    <label class="control-label fix_width">用户名</label>
                                    <div class="form-left-15">
                                        <input type="text" class="form-control" id="userName" name="userName"
                                               value="$!syAdminUser.userName"/>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group has-success">
                                    <label class="control-label fix_width">状态</label>
                                    <div class="form-left-15">
                                        <select class="form-control" id="status" name="status">
                                            <option value="">全部</option>
                                            <option value=1 #if($!syAdminUser.status == 1) selected #end>有效
                                            </option>
                                            <option value=2 #if($!syAdminUser.status == 2) selected #end>无效
                                            </option>
                                        </select>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group" style="float:left">
                                    <button type="submit" class="btn btn-primary"> 查 询</button>
                                </div>
                            </td>
                        </tr>
                        </tbody>
                    </table>

                    <input type="hidden" id="pageNo" name="pageNo" value="$!{query.pageNo}"/>
                    <input type="hidden" id="pageCount" name="pageCount" value="$!{query.pageCount}"/>
                </form>
            </div>
        </div>
    </div>
    <!--/span-->
</div><!--/row-->
    <div style="margin-left: 285px"> <span style="color: orangered;">$!{errorMsg}</span></div>
<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2><i class="glyphicon glyphicon-edit"></i>管理员列表</h2>
                <div class="box-icon">
                    <a href="#" class="btn btn-minimize btn-round btn-default"><i
                            class="glyphicon glyphicon-chevron-up"></i></a>
                </div>
            </div>
            <div class="box-content">
                <!--  datatable -->
                <table class="table table-striped table-bordered bootstrap-datatable responsive">
                    <thead>
                    <tr>
                        <th>id</th>
                        <th>用户名</th>
                        <th>状态</th>
                        <th>创建时间</th>
                        <th>修改时间</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                        #foreach($v in $list )
                        <tr>
                            <td>$!{v.id}</td>
                            <td>$!{v.userName}</td>
                            <td> #if($!{v.status} == 1) 有效 #else 无效 #end</td>
                            <td>$!date.format('yyyy-MM-dd HH:mm:ss ',$!{v.createTime})</td>
                            <td>$!date.format('yyyy-MM-dd HH:mm:ss ',$!{v.modifyTime})</td>
                            <td class="center">
                                <a class="btn btn-primary" href="#"
                                   onclick="javascript:window.open('${ac.contextPath}/manage/admin/edit?id=${v.id}');"
                                <i class="glyphicon glyphicon-edit icon-white"></i>
                                编辑
                                </a>
                                #if($!{v.status} == 1)
                                    <a class="btn btn-danger" href="#" onclick="update(${v.id},2);">
                                        <i class="glyphicon glyphicon-trash icon-white"></i>
                                        无效
                                    </a>
                                #else
                                    <a class="btn btn-info" href="#" onclick="update(${v.id},1);">
                                        <i class="glyphicon glyphicon-trash icon-white"></i>
                                        有效
                                    </a>
                                #end
                            </td>
                        </tr>
                        #end
                    </tbody>
                </table>
                <!-- 引用common下面的分页 -->
                #parse("/common/page.vm")

            </div>
        </div>
    </div>
    <!--/span-->
</div><!--/row-->

<script>

    // 删除banner
    function update(id, status) {
        var p = {
            id: id,
            status: status
        };

        $.ajax({
            type: "POST",
            url: "${ac.contextPath}/manage/admin/update",
            data: p,
            dataType: "JSON",
            success: function(res){
                if(res.code == 1){
                    layer.msg(res.msg, {icon:6},function () {
                        $("#searchForm").submit();
                    });
                }else{
                    layer.msg(res.msg, {icon: 10});
                }
            },
            error:function(){
                layer.msg("提交失败,请重试", {icon: 5});
                //setTimeout("window.location.reload()", 2000);//2秒后刷新
            }
        });
    }

    // 页面初始化函数
    $(function () {
    });
</script>

